// pyramid using for loop and function
#include <iostream>

void charac(int n)
{
for(int i =0;i<n;i++){
    for(int j=0;j<=i;j++){
       std:: cout<<" *";
    }
    std::cout<<std::endl;
}
}
int main() {
    int n=5;
    charac(n);

    return 0;
}

// pyramid using simple for loop

#include <iostream>

int main(){
   ;

for(int i =0;i<5;i++){
    for(int j=0;j<=i;j++){
       std:: cout<<" *";
    }
    std::cout<<std::endl;
}

    return 0;
}



